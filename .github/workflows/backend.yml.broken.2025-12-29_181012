name: backend-ci-cd

on:
  push:
    branches: ["dev", "main"]
  workflow_dispatch:

permissions:
  contents: read
  packages: write

jobs:
  build_push:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: docker/setup-buildx-action@v3

      - name: Login GHCR
        uses: docker/login-action@v3
        with:
          registry: ghcr.io
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Set tag
        id: tag
        run: |
          if [ "${GITHUB_REF_NAME}" = "dev" ]; then
            echo "TAG=dev" >> "$GITHUB_OUTPUT"
          else
            echo "TAG=prod" >> "$GITHUB_OUTPUT"
          fi

      - name: Build and push
        uses: docker/build-push-action@v6
        with:
          context: .
          push: true
          tags: |
            ghcr.io/abdelhasoloji/mastermind-juriscope-api:${{ steps.tag.outputs.TAG }}
            ghcr.io/abdelhasoloji/mastermind-juriscope-api:sha-${{ github.sha }}

  deploy:
    needs: build_push
    runs-on: ubuntu-latest
    steps:
      - name: Deploy via SSH
        uses: appleboy/ssh-action@v1.2.0
        with:
          host: ${{ secrets.SSH_HOST }}
          username: ${{ secrets.SSH_USER }}
          key: ${{ secrets.SSH_PRIVATE_KEY }}
          port: ${{ secrets.SSH_PORT }}
          script: |
            set -euo pipefail

            BRANCH="${{ github.ref_name }}"
            if [ "$BRANCH" = "dev" ]; then
              TAG="dev"
              NAME="juriscope-api-dev"
              PORT="8084"
              ENV_FILE=".env.dev"
            else
              TAG="prod"
              NAME="juriscope-api-prod"
              PORT="8082"
              ENV_FILE=".env"
            fi

            IMAGE="ghcr.io/abdelhasoloji/mastermind-juriscope-api:${TAG}"

            wait_health () {
              local url="$1"; local max=30; local i=1
              while [ $i -le $max ]; do
                if curl -fsS "$url" >/dev/null 2>&1; then
                  echo "health ok ($i/$max)"
                  return 0
                fi
                sleep 1
                i=$((i+1))
              done
              echo "health failed after ${max}s: $url" >&2
              return 1
            }

            sudo mkdir -p /opt/mastermind/apps/juriscope/api-runtime
            cd /opt/mastermind/apps/juriscope/api-runtime

            # Infisical en pause: on exige les env files deja presents
            test -f "$ENV_FILE"

            sudo docker pull "$IMAGE"
            sudo docker rm -f "$NAME" >/dev/null 2>&1 || true

            sudo docker run -d \
              --name "$NAME" \
              --restart unless-stopped \
              --env-file "./$ENV_FILE" \
              -p "127.0.0.1:${PORT}:4000" \
              "$IMAGE"

            wait_health "http://127.0.0.1:${PORT}/health"
            sudo docker ps --filter "name=$NAME"
